		ShowMessage("Результат сохранён в файл");
	}
	else  {
		ShowMessage("Результат не сохранён в файл");
	}


// Очищаем поле ввода Form3->Edit6
Edit4->Clear();

// Устанавливаем статус выполнения поиска
Form2->StatusBar1->SimpleText = "Выполнен поиск по кол-ву картошки";  }   }
