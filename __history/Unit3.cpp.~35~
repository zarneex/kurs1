if (searchString == "")
{
	ShowMessage("Введите текст для поиска");
	return;
}
int num;
if (!TryStrToInt(Edit5->Text, num)) {


	return;
}

// Закрываем форму Form3
Close();

// Итерируемся по строкам таблицы StringGrid1 и ищем
